<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team_uganda.ieltsassistor.PracticeSentenceCompletion"
        android:orientation="vertical">


        <TextView
            android:id="@+id/headlineMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Read the following passage and answer the question set:" />
        <TextView
            android:id="@+id/passagetitleTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#00000d"
            android:layout_below="@+id/headlineMessage"
            android:text="The largest thing in the universe" />

        <TextView
            android:id="@+id/stringPassageTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/passagetitleTF"
            android:text="birokto" />

        <TextView
            android:id="@+id/questionsOfTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="19dp"

            android:textSize="15dp"
            android:textColor="#00000d"
            android:layout_below="@+id/stringPassageTF"
            android:text="kita" />


    </LinearLayout>
</ScrollView>